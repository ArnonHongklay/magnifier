  <div class="panel-body">
    <div class="row">
      <div class="col-xs-12 col-md-12">
        <div class="panel-heading">
          <!--<p align="center" size="34"><b>--><h2>การตั้งค่าบัญชีผู้ใช้</h2><!--</b></p>-->
          <div class="table-responsive">
            <table class="table table-hover">
              <tr class="info">

                  <td widih="20%"><label>Email {{showEdit}}</label></td>
                    <td cwidth="70%">
                      <div class="form-group">
                        <div class="col-sm-10">
                          <input type="email"
                                 class="form-control"
                                 placeholder="Email"
                                 ng-model="account.email"
                                 ng-if="showEdit == true"
                                 ng-blur="showEdit = false">
                          <span ng-if="showEdit == false">{{account.email}}</span>
                        </div>
                      </div>
                    </td>
                  <td width="10%"><button type="button" class="btn btn-default" ng-click="showEdit = true">Edit</button></td>

              </tr>
              <!-- <tr class="info">

                  <td widih="20%"><label>Password</label></td>
                    <td cwidth="70%">
                      <div class="form-group">
                        <div class="col-sm-10">
                          <input type="password" class="form-control" id="inputEmail3" placeholder="Password">
                        </div>
                      </div>
                    </td>
                  <td width="10%"><button type="button" class="btn btn-default">Edit</button></td>

              </tr> -->
              <tr class="info">

                  <td widih="20%"><label>Name</label></td>
                    <td cwidth="70%">
                      <div class="form-group">
                        <div class="col-sm-10">
                          <input type="name" class="form-control" placeholder="Name" ng-model="account.name">
                        </div>
                      </div>
                    </td>
                  <td width="10%"><button type="button" class="btn btn-default">Edit</button></td>

              </tr>
              <tr class="info" ng-repeat="server in servers">

                  <td widih="20%"><label>Address</label></td>
                    <td cwidth="70%">
                      <div class="form-group">
                        <div class="col-sm-10">
                          <input type="ip_address" class="form-control" placeholder="IP Address" ng-model="server.ip_address">
                        </div>
                      </div>
                    </td>
                  <td width="10%"><button type="button" class="btn btn-default">Edit</button></td>

              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-offset-2 col-sm-12">
        <button type="button" class="btn btn-success btn-lg col-xs-8 col-md-8" ng-click="addServer()">Add Server</button>
      </div>
    </div>
  </div>

  <div class="panel panel-default" ng-if="ipaddress">
    <h1 class="text-success">PLEASE INPUT IP ADDRESS</h1>
    <div class="panel-body">
        <div class="form-group has-feedback">
          <label for="ipaddress" class="col-sm-2 control-label">IPAddress</label>
          <div class="row">
            <div class="col-sm-4">
              <input type="ipaddress" class="form-control" placeholder="IPAddress">
            </div>
            <div class="col-sm-2">
              <button type="submit" class="btn btn-primary"  ng-click="newipaddress()">Confirm</button>
            </div>
          </div>
        </div>
    </div>
  </div>

  <div class="panel panel-default" ng-if="script">
    <div class="panel-heading">
      <div class="panel-body">
        <div class="row">
            <div class="table-responsive">
              <table class="table table-condensed">
                <tr>
                  <td><font size="6" class="text-success">Copy to your prompt</font></td>
                </tr>
                <tr class="warning" align="center">
                  <td class="text-danger"><!--<font size="6">--><h2>\curl -sSL https://get.ohmpieng.io | bash</h2><!--</font>--></td>
                </tr>
              </table>
            </div>
        </div>
      </div>
    </div>
  </div>
