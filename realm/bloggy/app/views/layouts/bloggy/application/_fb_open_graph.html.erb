<meta property="og:title" content="<%= bloggy_accurate_title %>"/>
<meta property="og:type" content="<%= controller.action_name == "show" ? "article" : "blog" %>"/>
<meta property="og:url" content="<%= request.protocol %><%= request.host_with_port %><%= request.path.gsub("//","/") %>"/>
<meta property="og:site_name" content="<%= Bloggy::Config.site_name %>"/>
<% if Bloggy::Config.facebook_logo%>
   <meta property="og:image" content="<%= absolute_image_url(image_path(Bloggy::Config.facebook_logo)) %>" />
<% end  %>
