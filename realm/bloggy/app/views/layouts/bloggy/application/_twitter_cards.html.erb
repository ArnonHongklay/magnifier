<meta name="twitter:card" content="summary">
<% if Bloggy::Config.twitter_username %>
  <meta name="twitter:site" content="<%= Bloggy::Config.twitter_username %>">
<% end %>
<meta name="twitter:url" content="<%= request.protocol %><%= request.host_with_port %><%= request.path.gsub("//","/") %>">
<meta name="twitter:title" content="<%= bloggy_accurate_title %>">
<meta name="twitter:description" content="<%= content_for?(:meta_description) ? yield(:meta_description) : Bloggy::Config.meta_description  %>">
