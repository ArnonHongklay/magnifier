<% content_for :title do %>
  <%= @post.title %>
<% end %>

<% content_for :meta_description do %>
  <%= truncate(strip_tags(@post.content), length: 155) %>
<% end %>

<article>
  <%= render partial: 'bloggy/posts/post_header', locals: {post: @post }%>
  <div class="content" data-bloggy="content">
    <%= raw @post.content %>
  </div>

	<div class="tags" data-bloggy="tags">
    <%= render @post.tags %>
  </div>

  <%= render "bloggy/posts/social_sharing" %>

  <div id="disqus_thread"></div>
  <%= render 'layouts/bloggy/application/disqus_embed' %>
  <noscript>Please enable JavaScript to view the comments.</noscript>
</article>

